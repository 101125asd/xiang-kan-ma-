void  A1()   //    存款项目
{
	void date();
	system("color F");     //亮白色
	int a;
	system("cls");
	printf("请输入您的存款金额:\n");
    scanf("%d",&a);
	system("cls");
	printf("您的存款金额为:%d\n",a);
	acc[w].balance=acc[w].balance+a;
	printf("您的账户余额为:\n");
    printf("%d元\n",acc[w].balance);
	printf("交易时间:");
	date();
	system("pause");
    system("cls");
	ZGN();
}
void  A2()   //    取款项目
{
	void date();
	system("color F");     //亮白色
	int b;
	system("cls");
w:	printf("请输入您的取款金额:\n");
	scanf("%d",&b);
	if(b<=acc[w].balance)
	{
    printf("您的取款金额为:%d元\n",b);
	acc[w].balance=acc[w].balance-b;
	printf("您的账户余额为:\n");
	printf("%d元\n",acc[w].balance);
	printf("交易时间:");
	date();
	system("pause");
    system("cls");
	}
	else
	{
		printf("您的账户余额不足，转账失败,请重新操作!");
		system("pause");
        system("cls");
        goto w;
	}
	printf("请进行新的操作!\n");
    system("cls");
	ZGN();
}
void  A3()   //    转账项目
{
	void date();
	system("color F");     //亮白色
	int a,b,i,j;
	int tq(int a);
	int chose(int a);
	system("cls");
	printf("转账的账户:");
	scanf("%d",&a);
q:	j= chose(a);
	i=tq(a);
	if(j)
	{
	   printf("转账的金额:");
	   scanf("%d",&b);
	   if(b<acc[w].balance)
	   {
	     acc[w].balance=acc[w].balance-b;
	     acc[i].balance=acc[i].balance+b;
	     printf("账户的余额是:%d元\n",acc[w].balance);
		 printf("交易时间:");
	     date();
	   }
	   else
	   {
		 printf("账户余额不足,请重新输入转账金额:\n");
		 scanf("%d",&b);
		 A3();
	   }
	}
	else
	{
		printf("该账户错误,请重新输入\n");
		scanf("%d",&a);
		goto q;
	}
	system("pause");
    system("cls");
	ZGN();

}
int tq(int a)                                   //    提取用户的下标
{
	int i;
	for(i=0;i<3;i++)
	{
		if(a==acc[i].id)
		{
			return i;
		}
	}
}
int chose(int a)                                //   判断账户是否为该银行账户
{
	int i,k;
	for(i=0;i<3;i++)
	{
		if(a==acc[i].id)
		{
			k=0;
			return 0;
		}
		if(a==acc[w].id)
		{
		    k=0;
			return 0;
		}
		else
		{
			k=1;
			return k;
		}
	}
}
void  A4()   //    修改密码
{
	system("color F");     //亮白色
	int i,j;
    system("cls");
y:  printf("请输入你的新密码:\n");
    scanf("%d",&i);
    system("cls");
    printf("请再次输入新密码:\n");
    scanf("%d",&j);
    system("cls");
    if(i!=j)
	{
	   printf("你两次输入的密码不一致，请重新输入!!!\n");
	   goto y;
	}
    else
	{
	   acc[w].password=j;
	   printf("修改密码成功!!!\n");
	   system("pause");
	   system("cls");
	   ZGN();
	}
	   system("pause");
	   system("cls");
	   ZGN();
}
