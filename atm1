int bianli(int a,int b)    //    遍历函数
{
	int i,j;
	for(i=0;i<50;i++)
	{
	 if(acc[i].id==a&&acc[i].password==b)
	 {
		 p=&i;
		 w=*p;
		 j=1;
		 return j;
	 }
	}
	j=0;
	return j;
}
