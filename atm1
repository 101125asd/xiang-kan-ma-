void date()   //显示当前日期
{
	SetConsoleTextAttribute(GetStdHandle(STD_OUTPUT_HANDLE),FOREGROUND_INTENSITY|FOREGROUND_GREEN);         //绿色
    printf("\n    当前日期:");
    system("date/t");
    printf("    当前时间:");
    system("time/t"); 	
}

